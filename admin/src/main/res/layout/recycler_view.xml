<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="360dp"
        android:layout_height="154dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/bus_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:padding="@dimen/cardview_compat_inset_shadow"
                android:text="Bus Number "
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/start_pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="41dp"
                android:text="Start Point "
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Current_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Current Location"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/next_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/start_pt"
                android:layout_marginBottom="41dp"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                tools:text="NextStop" />

            <TextView
                android:id="@+id/nextstop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="13dp"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                tools:text="NextStopTime " />

            <TextView
                android:id="@+id/startpoint_details"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/current_details"
                android:layout_alignTop="@+id/start_pt"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/current_details"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:text="TextView"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/nextstop_details"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/startpoint_details"
                android:layout_alignTop="@+id/next_stop"
                android:text="TextView"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/nextstoptime_detail"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/startpoint_details"
                android:layout_alignTop="@+id/nextstop_time"
                android:text="TextView"
                android:textColor="@android:color/holo_blue_light" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>